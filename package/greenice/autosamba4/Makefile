include $(TOPDIR)/rules.mk

PKG_NAME:=autosamba4
PKG_VERSION:=1
PKG_RELEASE:=2
PKG_ARCH:=all

include $(INCLUDE_DIR)/package.mk

define Package/autosamba4
  TITLE:=Samba4 autoconfig hotplug script.
  MAINTAINER:=greenice
  DEPENDS:=+luci-app-samba4 +kmod-fs-vfat +ntfs-3g +kmod-fs-ext4
endef

define Package/autosamba4/description
A hotplug script to config Samba share automatically.
endef

define Build/Compile
endef

define Package/autosamba4/install
	$(INSTALL_DIR) $(1)/etc/hotplug.d/block
	$(INSTALL_BIN) ./files/20-smb4 $(1)/etc/hotplug.d/block/20-smb4
endef

$(eval $(call BuildPackage,autosamba4))
